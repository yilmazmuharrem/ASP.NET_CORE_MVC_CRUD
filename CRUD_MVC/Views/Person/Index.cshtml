@model  List<CRUD_MVC.Models.Domain.Person>


<h1>Persons</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email </th>
            <th>Salary</th>
            <th>Department</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Salary</td>
                <td>@item.Salary</td>
                <td>@item.Departmen</td>
                <td> <a href="Person/View/@item.Id">iNCELE</a></td>
            </tr>
        }
    </tbody>
</table>